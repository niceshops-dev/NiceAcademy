{
    "name": "niceshops/nice-academy",
    "description": "Niceshops Academy",
    "license" : "BSD-3-Clause",
    "require": {
        "php": ">=7.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "NiceshopsDev\\NiceAcademy\\Tests\\Basic\\": "tests/php/basic/src",
            "NiceshopsDev\\NiceAcademy\\Tests\\Advanced\\": "tests/php/advanced/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NiceshopsDev\\NiceAcademy\\Tests\\Basic\\": "tests/php/basic/test",
            "NiceshopsDev\\NiceAcademy\\Tests\\Advanced\\": "tests/php/advanced/test"
        }
    },
    "scripts": {
        "test" : "vendor/bin/phpunit",
        "test-php-basic" : "vendor/bin/phpunit --testsuite test-php-basic",
        "test-php-advanced" : "vendor/bin/phpunit --testsuite test-php-advanced"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    }
}
